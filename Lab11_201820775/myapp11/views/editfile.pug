extends layout

block content
        form(method="POST" action="/routes/movie/update/:id")


            div
                label Title
                input(type="text" name="title" id="edittitle")

                label Year
                input(type="text" name="year" id="edityear" )

                label Image Path
                input(type="text" name="url" id="editimage" )

                input(id="edit_id", type="hidden")


                input(type="submit" onclick="ajaxEdit()" value="Edit Movie")